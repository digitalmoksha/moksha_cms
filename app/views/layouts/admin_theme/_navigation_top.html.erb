<div class="navbar navbar-inverse" role="navigation">
  <div class="navbar-header">
    <%= link_to main_app.index_url, class: 'navbar-brand' do %>
      <%= current_account.domain %>
      <a class="sidebar-toggle"><i class="icon-arrow3"></i></a> 
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-icons"><span class="sr-only">Toggle navbar</span> <i class="icon-grid3"></i></button> 
      <button type="button" class="navbar-toggle offcanvas"><span class="sr-only">Toggle navigation</span> <i class="icon-paragraph-justify2"></i></button>
    <% end %>
  </div>
  <ul class="nav navbar-nav navbar-right collapse" id="navbar-icons">
    <li>
      <%= link_to(can?(:manage, :all) ? dm_core.admin_users_path : '#') do %>
        <i class='icon-people'></i> <span class='label label-default'><%= User.current_account_users.count %></span>
      <% end %>
    </li>
    <% if is_admin? || can?(:manage_content, :all) %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown"><i class="icon-cog3"></i></a>
        <ul class="dropdown-menu dropdown-menu-right icons-right">
          <% if can? :manage_content, :all %>
            <li><%= link_to label_icon('Clear Page Cache', 'icon-redo'), dm_cms.admin_expire_cache_path, method: :patch %></li>
          <% end %>
          <% if is_admin? %>
            <li><%= link_to label_icon('Site Settings', 'icon-cog'), dm_core.admin_account_path %></li>
          <% end %>
          <% if is_sysadmin? %>
            <li><%= link_to label_icon('Update Assets', 'icon-spinner8'), dm_core.admin_dashboard_update_site_assets_url, method: :patch %></li>
          <% end %>
          <% if is_sysadmin? %>
            <li><%= link_to label_icon('System Admin', 'icon-wrench'), dm_core.admin_system_path %></li>
          <% end %>
        </ul>
      </li>
    <% end %>
    <li class="user dropdown">
      <%= link_to '#', class: 'dropdown-toggle', data: {toggle: 'dropdown'} do %>
        <%= image_tag(current_user.user_profile.public_avatar_url(:sq35), width: 30, height: 30) %> 
        <span><%= current_user.display_name %></span>
        <i class="caret"></i>
      <% end %>
      <ul class="dropdown-menu dropdown-menu-right icons-right">
        <li><%= link_to('<i class="icon-user"></i> My profile'.html_safe, dm_core.edit_profile_account_path) %></li>
        <li><%= link_to('<i class="icon-exit"></i> Logout'.html_safe, main_app.destroy_user_session_path, {:method => :delete}) %></li>
      </ul>
    </li>
  </ul>
</div><!-- /navbar -->
