<div id="<%= options[:id] %>" class="tabbable tabs-right <%= options[:class] %>">
  <div class='navbar'>
    <div class='navbar-inner'>
      <h5><%= options[:title] %></h5>
      <%= options[:toolbar] %>
    </div>
  </div>
          <ul class="nav nav-tabs nav-stacked">
            <li class="active">
              <a href="#tab1" data-toggle="tab">Tab 1</a>
            </li>
            <li>
              <a href="#tab2" data-toggle="tab">Tab 2</a>
            </li>
            <li>
              <a href="#tab3" data-toggle="tab">Tab 3</a>
            </li>
          </ul>
  <div class="tab-content">
    <% current_account.site_locales.each do |locale| %>        
      <% active = "active" if current_account.preferred_default_locale == locale %>
      <div id="tab_<%= locale %>" class="tab-pane fade in <%= active %>">
        <div class="block">
          <%= content[locale] %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if false %>
<div id="<%= options[:id] %>" class="block well <%= options[:class] %>">
  <div class='navbar'>
    <div class='navbar-inner'>
      <h5><%= options[:title] %></h5>
      <%= options[:toolbar] %>
    </div>
  </div>
  <div class="tab-content">
    <% current_account.site_locales.each do |locale| %>        
      <% active = "active" if current_account.preferred_default_locale == locale %>
      <div id="tab_<%= locale %>" class="tab-pane fade in <%= active %>">
        <%= content[locale] %>
      </div>
    <% end %>
  </div>
</div>
<% end %>