<div class="block-inner">
<% unless label.blank? %>
  <strong><%= label %></strong>
<% end %>
<% unless value.blank? %>
  <strong class="pull-right"><%= value %></strong>
<% end %>
<div class="progress progress-thin">
  <div class="progress-bar progress-bar-<%= color %>" role="progressbar" aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= percentage %>%;">
    <span class="sr-only"><%= percentage %>% Complete</span>
  </div>
</div>
<% unless bottom_label.blank? %>
  <span class="bottom_label"><%= bottom_label %></span>
<% end %>
</div>