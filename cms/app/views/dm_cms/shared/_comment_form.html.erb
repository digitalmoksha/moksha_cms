<% if commenting_on.comments_allowed? %>
  <div id="reply" class="comment_reply_form">
    <%= simple_form_for :comment, url: [commenting_on, :ajax_add_comment] do |f| %>
      <%= f.input :body, :as => :text, :label => I18n.t('cms.comment_body'), 
                      :input_html => {:rows => 10} %>
      <%= f.submit I18n.t('cms.comment_submit') %>
    <% end %>
  </div>
<% end %>