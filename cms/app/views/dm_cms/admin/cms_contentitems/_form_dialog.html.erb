<% title = "Editing Content" %>

<div id="cms_content_dialog" class="dialog " title="<%= title %>">
  <%= form_for @cms_contentitem, :url => {:controller => 'dm_cms/cms_contentitems', :id => @cms_contentitem}, :html => { :method => :put } do |f| %>
    <label>Item Type</label>
    <%= select_content_type %>
    <label>Content Name</label>
    <%= f.text_field :container %>
    <label>Purpose</label>
    <%= f.text_field :purpose %>
    <label>Cache Content</label>
    <div class="yes_no"><%= f.check_box :enable_cache %></div>
    
    <div class="divider"><span></span></div>
    
    <label>Content</label>
    <%= f.text_area :content, :class => 'monospaced' %>
  <% end %>
</div>
