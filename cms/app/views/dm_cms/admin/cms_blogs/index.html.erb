
<% toolbar = nav_bar_items([ link_to(icon_label('icon-plus', 'New'), new_admin_cms_blog_path, :title => 'New Blog', :class => "nav-btn-primary") ]) %>
<%= content_frame :title => 'Blogs', :toolbar => toolbar do %>
  <div class="table-overflow">
    <table id="drag_sort" class="table table-striped table-bordered table-block" data-update_url="<%= dm_cms.admin_cms_blog_sort_path %>">
      <thead>
        <tr>
          <th class="sort_handle"></th>
          <th>Title</th>
          <th width="50">Type</th>
          <th width="50">Status</th>
        </tr>
      </thead>
      <tbody>
        <% @blogs.each do |blog| %>
          <% present blog do |blog_presenter| %>
            <tr class="item" data-item_id="<%= blog.id %>">
              <td class="sort_handle"></td>
              <td>
                <%= link_to blog.title, admin_cms_blog_path(blog) %>
              </td>
              <td><%= blog_presenter.visibility %></td>
              <td><%= blog_presenter.label_published %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>