<%
  list = []
  if @current_page.cms_contentitems.count > 1
    list << link_to(icons('font-arrow-up'), move_up_admin_cms_contentitem_path(contentitem), :title => "Move content up")
    list << link_to(icons('font-arrow-down'), move_down_admin_cms_contentitem_path(contentitem), :title => "Move content down")
  end
  list << link_to(icon_label('icon-edit', 'Edit'), [:edit, :admin, contentitem], :class => "nav-btn-primary")
  list << link_to(icon_label('icon-trash', 'Delete'), [:admin, contentitem], :method => :delete, :class => "nav-btn-danger", :confirm => 'Are you sure you wish to delete this item?')
%>
<%= nav_bar_items( list ) %>