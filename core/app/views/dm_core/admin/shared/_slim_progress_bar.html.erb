<% unless label.blank? %>
  <strong><%= label %></strong>
<% end %>
<% unless value.blank? %>
  <strong class="pull-right"><%= value %></strong>
<% end %>
<div class="progress progress-<%= color %> slim"><div class="bar" data-percentage="<%= percentage %>"></div></div>    
<% unless bottom_label.blank? %>
  <span class="bottom_label"><%= bottom_label %></span>
<% end %>