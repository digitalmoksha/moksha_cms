<% toolbar = toolbar_btn(User.current_account_users.count, dm_core.admin_users_path, :title => 'Number of Registered Users', :class => 'label label-success') %>
<%= panel :title => 'Recent User Activity', :toolbar => toolbar, body: false do %>
  <div class="table-overflow">
    <table class="table table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th style="text-align: center">Last Login</th>
        </tr>
      </thead>
      <tbody>
        <% User.current_account_users.order('user_site_profiles.last_access_at DESC').limit(5).each do |user| %>
          <tr>
            <td><%= user.full_name %></td>
            <td align="center"><%= present(user).last_access %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
